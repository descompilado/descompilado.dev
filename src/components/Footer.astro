---
import { Mail } from "lucide-react";
---

<footer class="py-12 bg-card/50 border-t border-border">
    <div class="w-full max-w-[1400px] mx-auto px-6">
        <div class="max-w-4xl mx-auto">
            <div
                class="flex flex-col md:flex-row items-center justify-between gap-8"
            >
                <div class="text-center md:text-left">
                    <h3 class="text-2xl font-bold gradient-text mb-2">
                        Descompilado
                    </h3>
                    <p class="text-muted-foreground">
                        Aprenda construindo na prática
                    </p>
                </div>

                <div class="flex flex-col sm:flex-row items-center gap-6">
                    <a
                        href="mailto:contato@descompilado.com"
                        class="flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors"
                    >
                        <Mail className="w-5 h-5" />
                        <span>contato@descompilado.com</span>
                    </a>
                </div>
            </div>

            <div class="border-t border-border mt-8 pt-8 text-center">
                <p class="text-sm text-muted-foreground">
                    © 2025 Descompilado. Todos os direitos reservados.
                </p>
            </div>
        </div>
    </div>
</footer>
